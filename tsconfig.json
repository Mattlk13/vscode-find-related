{
    "compilerOptions": {
        "lib": [ "es6" ],
        "module": "commonjs",
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": false,
        "noUnusedLocals": true,
        "outDir": "out",
        "removeComments": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "strictNullChecks": false,
        "target": "es6"
    },
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}